{% extends 'base.html.twig' %}

{% block title %}Marketplace API - Panier {% endblock %}

{% block body %}
    <div class="py-12">
        <div class="bg-white">
            <div class="mx-auto max-w-2xl px-4 pb-24 pt-16 sm:px-6 lg:max-w-7xl lg:px-8">
                {% if cart|length > 0 %}
                    <h1 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">Shopping Cart</h1>
                    <form class="mt-12 lg:grid lg:grid-cols-12 lg:items-start lg:gap-x-12 xl:gap-x-16">
                        <section aria-labelledby="cart-heading" class="lg:col-span-7">
                            <h2 id="cart-heading" class="sr-only">Items in your shopping cart</h2>
                            <ul role="list" class="divide-y divide-gray-200 border-b border-t border-gray-200">
                                {% for item in cart %}
                                    <li class="flex py-6 sm:py-10">
                                        <div class="ml-4 flex flex-1 flex-col justify-between sm:ml-6">
                                            <div class="relative pr-9 sm:grid sm:grid-cols-2 sm:gap-x-6 sm:pr-0">
                                                <div>
                                                    <div class="flex justify-between">
                                                        <h3 class="text-sm">
                                                            <a href="{{ path('show_api', {'id': item.api.id}) }}" class="font-medium text-gray-700 hover:text-gray-800">{{ item.api.name }}</a>
                                                        </h3>
                                                    </div>
                                                    <div class="mt-1 flex text-sm">
                                                        <p class="text-gray-500">{{ item.api.description }}</p>
                                                    </div>
                                                    <p class="mt-1 text-sm font-medium text-gray-900">{{ item.offer.price }} € / {{ item.offer.nbOfAvailableRequests}} Requêtes</p>
                                                </div>

                                                <div class="mt-4 sm:mt-0 sm:pr-9">
                                                    <div class="absolute right-0 top-0">
                                                        <a href="{{ path('app_cart_remove_item', {'api_id': item.api.id} ) }}" type="button" class="-m-2 inline-flex p-2 text-gray-400 hover:text-gray-500">
                                                            <span class="sr-only">Remove</span>
                                                            <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" data-slot="icon">
                                                                <path d="M6.28 5.22a.75.75 0 0 0-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 1 0 1.06 1.06L10 11.06l3.72 3.72a.75.75 0 1 0 1.06-1.06L11.06 10l3.72-3.72a.75.75 0 0 0-1.06-1.06L10 8.94 6.28 5.22Z" />
                                                            </svg>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </li>
                                {% endfor %}
                            </ul>
                        </section>

                        <!-- Order summary -->
                        <section aria-labelledby="summary-heading" class="mt-16 rounded-lg bg-gray-50 px-4 py-6 sm:p-6 lg:col-span-5 lg:mt-0 lg:p-8">
                            <h2 id="summary-heading" class="text-lg font-medium text-gray-900">Order summary</h2>

                            <dl class="mt-6 space-y-4">
                                {% for item in cart %}
                                    <div class="flex items-center justify-between">
                                        <dt class="text-sm text-gray-600">{{ item.api.name }}</dt>
                                        <dd class="text-sm font-medium text-gray-900">{{ item.offer.price }}€</dd>
                                    </div>
                                {% endfor %}
                                <div class="flex items-center justify-between border-t border-gray-200 pt-4">
                                    <dt class="text-base font-medium text-gray-900">Order total</dt>
                                    <dd class="text-base font-medium text-gray-900">{{ total }} €</dd>
                                </div>
                            </dl>

                            <div class="mt-6">
                                <a href="{{ path('app_stripe') }}" type="submit" class="w-full rounded-md border border-transparent bg-indigo-600 px-4 py-3 text-base font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 focus:ring-offset-gray-50">Payer</a>
                            </div>
                        </section>
                    </form>
                {% else %}
                    <div class="flex flex-col justify-center gap-8">
                        <h1 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl text-center">No Items</h1>
                        <div class="flex justify-center">
                            <a href="{{ path('app_home') }}" class="border rounded-md bg-indigo-50 px-2.5 py-1.5 text-sm font-semibold text-indigo-600 shadow-sm hover:bg-indigo-100">Voir les apis</a>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
