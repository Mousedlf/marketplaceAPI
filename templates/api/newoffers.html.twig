{% extends 'base.html.twig' %}

{% block title %}Hello APIController!{% endblock %}

{% block body %}

<div class="mx-auto max-w-2xl py-32 ">

    <h1 class="text-4xl font-semibold text-gray-900 mb-4">Create offers for your api </h1>

    <p>Name : {{ api.name }}</p>
    <p>Description : {{ api.description }}</p>
    <p class="mt-4">Offers : </p>

    {% for offer in api.offers %}
        <div class="flex p-4 rounded-lg border border-gray-200 items-center">
            <p class="text-xl font-bold text-gray-800 pe-2">{{ offer.price }}â‚¬ </p>
            <p class="text-gray-600 mt-2"> for {{ offer.nbOfAvailableRequests }} requests </p>
        </div>
    {% endfor %}

<br>



     {{ form_start(offerForm) }}

    <div class="sm:col-span-4">
        <label for="username" class="block text-sm font-medium leading-6 text-gray-900">Price</label>
        <div class="mt-2">
            <div class="flex rounded-md shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-600 sm:max-w-md">
                <span class="flex select-none items-center pl-3 text-gray-500 sm:text-sm"></span>
                {{ form_widget(offerForm.price, { 'attr': { 'class': 'block flex-1 border-0 bg-transparent py-1.5 pl-1 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6' } }) }}
            </div>
        </div>
    </div>
    <div class="sm:col-span-4">
        <label for="username" class="block text-sm font-medium leading-6 text-gray-900">Number of requests</label>
        <div class="mt-2">
            <div class="flex rounded-md shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-600 sm:max-w-md">
                <span class="flex select-none items-center pl-3 text-gray-500 sm:text-sm"></span>
                {{ form_widget(offerForm.nbOfAvailableRequests, { 'attr': { 'class': 'block flex-1 border-0 bg-transparent py-1.5 pl-1 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6' } }) }}
            </div>
        </div>
    </div>
    <br>
    <button type="submit" class="rounded-md bg-indigo-600 px-3 py-2 my-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Add offer</button>
    {{ form_end(offerForm) }}
<br>
<hr>
    <div class="mt-6 flex items-center justify-end gap-x-6">
            <a href="{{ path("register_new_api_admin_key", {id: api.id}) }}" type="submit" class="rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Final step : set admin key</a>
        </div>
</div>

{% endblock %}
