{% extends 'base.html.twig' %}

{% block body %}
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Profile</title>
</head>
<body class="bg-gray-100 font-sans">

  <section class="max-w-3xl mx-auto p-6 bg-white rounded-xl shadow-lg mt-10">
    <div class="text-center mb-8">
      <h2 class="text-3xl font-bold text-gray-800">{{ app.user.email }}</h2>
      <p class="text-gray-400">Joined: {{ app.user.createdAt|date("d/m/Y") }}</p>
    </div>
  </section>

  <section class="mb-24 max-w-3xl mx-auto p-6 bg-white rounded-xl shadow-lg mt-6">
    <h3 class="text-2xl font-semibold text-gray-800 mb-4">Purchased APIs</h3>

    {% if app.user.boughtAPIKeys.empty %}
    <div class="flex flex-col items-center justify-center">
      <span class="text-xl font-light text-gray-800">You have not bought an api key yet</span>
      <span class="text-xl font-light text-gray-700">Explore our apis: <a class="font-medium text-blue-600 dark:text-blue-500 hover:underline" href="{{ path('app_home') }}">Here</a></span>
    </div>
    {% else %}
      <div class="grid grid-cols-1 gap-6">
      {% for boughtApi in apis %}
          <div class="p-6 bg-gray-50 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-200">
            <h4 class="text-xl font-bold text-gray-800">{{ boughtApi.api.name}}</h4>
            <p class="text-gray-600 mt-2">{{ boughtApi.api.description }}</p>
            <div class="flex justify-between items-center mt-4">
              <span class="text-sm text-gray-500">Remaining requests: "afficher les requetes restantes par appel ici"</span>
              <button class="inline-flex w-56 justify-center gap-x-1.5 rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50">
                Generate new key
              </button>
            </div>
          </div>
      {% endfor %}
      </div>
    {% endif %}
  </section>
  <div class="w-full flex flex-col items-center justify-center gap-6 mb-8">
    <a href="{{ path('delete_account') }}" type="button" class="inline-flex w-56 justify-center gap-x-1.5 rounded-md bg-red-200 px-3 py-2 text-sm font-semibold text-black shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-red-300">
      Delete Account
    </a>
  </div>

</body>

{% endblock %}

